@model ImageProcessing.Web.Models.UserModel

@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" data-aos="fade-up">

    <div class="section-header d-flex justify-content-between align-items-center mb-5">
        <h2>Register</h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-6 mt-6">
            <div class="card login-logout-card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item text-center">
                            <button class="nav-link active" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="true">Register</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body tab-content">
                    <div class="tab-pane fade show active" id="register" role="tabpanel" aria-labelledby="register-tab">
                        <form asp-action="Register" asp-controller="Account" method="POST" data-ajax="true" data-ajax-update="result">
                            <div class="mb-3">
                                @Html.LabelFor(m=>m.Firstname, new {@class="form-label required"})
                                @Html.TextBoxFor(m=>m.Firstname, new {@class="form-control", @placeholder="First Name"})
                                @Html.ValidationMessageFor(m=>m.Firstname)
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m=>m.Lastname, new {@class="form-label"})
                                @Html.TextBoxFor(m=>m.Lastname, new {@class="form-control", @placeholder="Last Name"})
                                @Html.ValidationMessageFor(m=>m.Lastname)
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m=>m.Email, new {@class="form-label required"})
                                @Html.TextBoxFor(m=>m.Email, new {@class="form-control", @type="email", @placeholder="Email"})
                                @Html.ValidationMessageFor(m=>m.Email)
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m=>m.Password, new {@class="form-label required"})
                                @Html.TextBoxFor(m=>m.Password, new {@class="form-control", @placeholder="Password"})
                                @Html.ValidationMessageFor(m=>m.Password)
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m=>m.ConfirmPassword, new {@class="form-label required"})
                                @Html.TextBoxFor(m=>m.ConfirmPassword, new {@class="form-control", @placeholder="Confirm Password"})
                                @Html.ValidationMessageFor(m=>m.ConfirmPassword)
                            </div>

                            <div class="float-right">
                                <button type="submit" class="btn btn-primary" style="float:left"> Submit</button>
                                <a asp-controller="Account" class="btn btn-primary" asp-action="signin" style="float:right">Sign In</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
